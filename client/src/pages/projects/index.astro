---
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import HomeHeader from '../../components/HomeHeader.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import ProjectTile from '../../layouts/ProjectTile.astro';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Projects | ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<div class="content">
			<HomeHeader selected="projects" />
			<main>
				<div class="section-1">
					<a
						class="project-tile"
						href={`/projects/rustcraft`}
					>
						<ProjectTile stub="rustcraft" />
					</a>
					<a
						class="project-tile"
						href={`/projects/ruby-sweeps`}
					>
						<ProjectTile stub="ruby-sweeps" />
					</a>
					<a
						class="project-tile"
						href={`/projects/flixr`}
					>
						<ProjectTile stub="flixr" />
					</a>
				</div>
			</main>
		</div>
		<Footer />
	</body>
</html>

<style>
	.content {
        max-width: max(min(70vw, 1200px), 700px);
		margin: auto;
		position: relative;
	}

	main {
		padding: 0px;
	}

	.section-1 {
		display: flex;
		flex-direction: column;
		align-items: center;
	}

	.project-tile {
		text-decoration: none;
		color: inherit;
		margin-bottom: 80px;
		margin-top: 24px;
		padding: 16px;
		transition: background-color 0.2s ease-in;

		&:hover {
			background-color: rgba(0, 0, 0, 0.02);
			border-radius: 15px;
		}
	}
</style>