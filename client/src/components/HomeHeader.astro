---
import { Icon } from 'astro-icon/components'
---

<header>
    <div class="left">

    </div>
    <div class="center">
        <div class="navigation">
            <a class="selected" href="/">Home</a>
            <a href="/blog">Blog</a>
            <a href="/projects">Projects</a>
        </div>
    </div>
    <div class="right socials">
        <a href="https://bsky.app/profile/darkzek.bsky.social" target="_blank">
            <span class="sr-only">Follow me on Bluesky</span>
            <Icon name="bluesky" />
        </a>
        <a href="https://github.com/darkzek" target="_blank">
            <span class="sr-only">Follow me on Github</span>
            <Icon name="github" />
        </a>
        <a href="https://www.linkedin.com/in/marshall-scott-746989167/" target="_blank">
            <span class="sr-only">Connect with me on Linkedin</span>
            <Icon name="linkedin" />
        </a>
    </div>
</header>

<style>
    header {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        padding: 16px;

        > div {
            flex: 1 0 0;
            display: flex;
        }

        .center {
            flex-grow: 0;
            flex-direction: column;
        }

        .right {
            flex-direction: row-reverse;
        }
    }

    @media screen and (max-width: 500px) {
        .socials {
            display: none !important;
        }
    }

    .socials {
        font-size: 2.2rem;
        padding-left: 16px;
        padding-top: 4px;

        a {
            color: var(--accent-light);
            text-decoration: none;
            margin-right: 12px;
            transition: color 0.2s ease-in-out;

            &:hover {
                color: var(--accent);
            }
        }
    }

    .navigation {
        background-color: #F0F0F0;
        padding: 6px 8px;
        border-radius: 100px;
        display: flex;
        margin-top: 4px;
        
        a {
            color: var(--accent-light);
            text-decoration: none !important;
            padding: 4px 25px;
            border-radius: 100px;
            font-size: 16px;

            &:hover {
                color: var(--accent);
            }
        }
    }

    .selected {
        background-color: var(--accent);
        color: white !important;
        box-shadow: 0px 2px 4px 0px rgba(0, 0, 0, 0.25);
    }
</style>