---
import { Icon } from 'astro-icon/components';
import type { CollectionEntry } from 'astro:content';

type Props = CollectionEntry<'projects'>['data'];

const { title, color, link } = Astro.props;
---

<article>
	{
		link ? 
			<div
				transition:name={`project cover ${title} image`}
				class="hero-frame"
			>
				<span class="url">
					{ link }
					<a
						class="open-external"
						href={link}
						target="_blank"
					>
						<Icon name="mingcute:external-link-line" />
					</a>
				</span>
				<div class="frame shadow">
					<Icon class="loading" name="mingcute:loading-3-fill" />
					<iframe
						id={link}
					/>
					<script is:inline define:vars={{ link }}>
						if (window.innerWidth > 700 && window.innerHeight > 700) {
							document.getElementById(link).src = link;
						}
					</script>
				</div>
			</div> : undefined
	}
	<div class="prose">
		<slot />
	</div>
</article>

<style lang="scss">
	article {
		display: flex;
		flex-direction: column;
		align-items: center;
	}

	.hero-frame {

		display: flex;
		flex-direction: column;
		margin-bottom: 24px;
		display: none;
		width: 80vw;
		max-height: 80vh;

		.frame {
			aspect-ratio: 2/1;
			overflow: hidden;
			border-radius: 10px;
			background-color: rgb(242, 242, 242);
			position: relative;

			iframe {
				width: 100%;
				height: 100%;
				border: none;
				z-index: 2;
				position: relative;
			}

			.loading {
				position: absolute;
				font-size: 2em;
				inset: 0px;
				margin: auto;
				animation: rotate 1s linear infinite;
				z-index: 1;
			}
		}

		.url {
			padding: 6px 12px;
			margin-bottom: 12px;
			background-color: rgb(242, 242, 242);
			border-radius: 10px;
			font-size: 14px;
			color: rgb(68, 68, 68);
			display: flex;
			justify-content: space-between;

			.open-external {
				color: black;
			}
		}
	}
	.prose {
		width: 720px;
		max-width: calc(100% - 2em);
		margin: auto;
		padding: 1em;
		color: rgb(var(--gray-dark));
		display: flex;
		flex-direction: column;
	}

	@keyframes rotate {
		from {
			transform: rotate(0deg);
		}
		to {
			transform: rotate(360deg);
		}
	}

	@media screen and (min-width: 700px) and (min-height: 700px) {
		.hero-frame {
			display: flex;
		}
	}
</style>