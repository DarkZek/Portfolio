---
import { Icon } from 'astro-icon/components'
import NavigationMenu from './NavigationMenu.astro';

const { selected } = Astro.props;
---

<div
    transition:name="header"
    class="sizer"
>
    <header>
        <div class="left">
            <a
                class="name"
                href="/"
                data-astro-prefetch
            >
                Marshall Scott
            </a>
        </div>
        <div class="center">
            <div class="navigation">
                <a
                    class={selected === 'home' ? 'selected' : ''}
                    href="/"
                    data-astro-prefetch="load"
                >
                    { selected === 'home' ? <div class="background" transition:name="bg"/> : ''}
                    Home
                </a>
                <a
                    class={selected === 'blog' ? 'selected' : ''}
                    href="/blog"
                    data-astro-prefetch="load"
                >
                    { selected === 'blog' ? <div class="background" transition:name="bg"/> : ''}
                    Blog
                </a>
                <a
                    class={selected === 'projects' ? 'selected' : ''}
                    href="/projects"
                    data-astro-prefetch="load"
                >
                    { selected === 'projects' ? <div class="background" transition:name="bg"/> : ''}
                    Projects
                </a>
            </div>
            <Icon
                id="open-navigation-menu"
                name="mingcute:menu-line"
                onclick="openNav()"
            />
        </div>
        <div class="right socials">
            <a href="https://bsky.app/profile/darkzek.bsky.social" target="_blank">
                <span class="sr-only">Follow me on Bluesky</span>
                <Icon name="bluesky" />
            </a>
            <a href="https://github.com/darkzek" target="_blank">
                <span class="sr-only">Follow me on Github</span>
                <Icon name="github" />
            </a>
            <a href="https://www.linkedin.com/in/marshall-scott-746989167/" target="_blank">
                <span class="sr-only">Connect with me on Linkedin</span>
                <Icon name="linkedin" />
            </a>
        </div>
    </header>
</div>

<div class="gap"/>

<NavigationMenu />

<script>
    (window as any).openNav = () => {
        document.getElementById('navigation-menu')?.setAttribute('open', '')
    }
</script>

<style lang="scss">
    
    .gap { 
        height: 79px;
    }

    .sizer {
        width: 100%;
        left: 0px;
        right: 0px;
        margin: auto;
        position: fixed;
        background-color: rgba(255, 255, 255, 0.8);
        backdrop-filter: blur(10px);
        z-index: 5;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    header {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        padding: 16px 32px;
        max-width: 800px;
        width: calc(100vw - 32px);

        > div {
            flex: 1 0 0;
            display: flex;
            justify-content: center;
            flex-direction: column;
        }

        .center {
            flex-grow: 0;
        }

        .right {
            flex-direction: row-reverse;
            padding-left: 12px;
            justify-content: flex-start;
        }

        .left {
            padding-right: 12px;
        }
    }

    @media screen and (max-width: 750px) {
        .socials {
            display: none !important;
        }
    }

    .socials {
        font-size: 2.2rem;
        height: 1em;

        a {
            color: var(--accent-light);
            text-decoration: none;
            margin-left: 16px;
            transition: color 0.2s ease-in-out;

            &:hover {
                color: var(--accent);
            }
        }
    }

    .navigation {
        padding: 6px 8px;
        border-radius: 100px;
        display: flex;
        
        a {
            color: var(--accent-light);
            text-decoration: none !important;
            padding: 4px 25px;
            border-radius: 100px;
            font-size: 16px;
            user-select: none;
            position: relative;

            &:hover {
                color: var(--accent);
            }

            &.selected {
                color: white !important;
            }

            .background {
                background-color: var(--accent);
                box-shadow: 0px 2px 4px 0px rgba(0, 0, 0, 0.25);
                inset: 0px;
                position: absolute;
                border-radius: 100px;
                z-index: -1;
            }
        }
    }

    @media screen and (max-width: 550px) {
        #open-navigation-menu {
            display: block !important;
        }

        .navigation {
            display: none;
        }
        
    }

    #open-navigation-menu {
        display: none;
        font-size: 1.8rem;
        color: var(--accent-light);
        cursor: pointer;
    }

    .name {
        color: var(--accent-light);
        white-space: nowrap;
        padding-right: 8px;
        text-decoration: none;
        font-size: 22px;
    }
</style>